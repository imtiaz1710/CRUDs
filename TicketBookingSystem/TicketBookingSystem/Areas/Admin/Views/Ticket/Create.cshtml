@model CreateTicketModel
@{ ViewData["Title"] = "Create"; }

<!-- Content Wrapper. Contains page content -->

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Create a New Ticket Entity</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Create Ticket</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- Horizontal Form -->
                <div class="card card-info">
                    <div class="card-header">
                        <h3 class="card-title">Ticket Entity</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form class="form-horizontal" method="post" asp-controller="Ticket"
                        asp-action="Create" asp-antiforgery="true">
                        <div class="card-body">
                            <div class="form-group row">
                                <label asp-for="CustomerId" class="col-sm-2 col-form-label">Customer Id</label>
                                <div class="col-sm-10">
                                    <input asp-for="CustomerId" type="number" class="form-control" id="CustomerId" placeholder="CustomerId">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Destination" class="col-sm-2 col-form-label">Destination</label>
                                <div class="col-sm-10">
                                    <input asp-for="Destination" type="text" class="form-control" id="Destination" placeholder="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="TicketFee" class="col-sm-2 col-form-label">Ticket Fee</label>
                                <div class="col-sm-10">
                                    <input asp-for="TicketFee" type="number" class="form-control" id="TicketFee" placeholder="TicketFee">
                                </div>
                            </div>
                        </div>
                        <!-- /.card-body -->
                        <div class="card-footer">
                            <button type="submit" class="btn btn-info">Submit</button>
                            <button type="submit" class="btn btn-default float-right">Cancel</button>
                        </div>
                        <!-- /.card-footer -->
                    </form>
                </div>
                <!-- /.card -->

            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->

